datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model question {
  id                Int         @required
  title             String      @required
  description       String      @required
  choices           String[]
  modals            JSON
  type              String      @required
}

model response {
  id                Int         @id @default(autoincrement())
  title             String      @required
  user              String      @required
  result            Boolean     @required
}

